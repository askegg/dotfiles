// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "base_keymap": "VSCode",
  // UI
  "theme": "Dracula",
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 13,
  "line_height": "1.2",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 13,
  // Code Formatting
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "tab_size": 2,
  "format_on_save": "on",
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "folds": true
  },
  "terminal": {
    "dock": "right",
    "copy_on_select": true
  },
  "tabs": {
    "git_status": true,
    "close_position": "left"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  // Helpers
  "copy_on_select": true,
  "hover_popover_enabled": true,
  "vim_mode": false,
  // Language Servers
  "file_types": {
    "Ruby": ["Gemfile", "Gemfile.jumpstart", "Brewfile"]
  },
  // "language_overrides": {
  //   "Ruby": {
  //     "formatter": {
  //       "external": {
  //         "command": "standardrb",
  //         "arguments": ["--fix", "--stdin", "ignored", "--stderr"]
  //       }
  //     }
  //   }
  // },
  "lsp": {
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      }
    }
  },
  // Disable buttons
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  // Co-Pilot
  "features": {
    "copilot": false
  },
  "assistant": {
    "enabled": false,
    "button": false,
    "dock": "right",
    "default_open_ai_model": "gpt-3.5-turbo-0613"
  }
}
