// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "base_keymap": "VSCode",
  "theme": "Dracula",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "line_height": "1.2",
  "ui_font_family": "JetBrains Mono",
  "ui_font_size": 13,
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "tab_size": 2,
  "format_on_save": "on",
  "copy_on_select": true,
  "hover_popover_enabled": true,
  "vim_mode": false,
  "relative_line_numbers": false,
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "folds": true
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "file_types": {
    "Ruby": ["Gemfile", "Gemfile.jumpstart", "Brewfile"]
  },
  "language_overrides": {
    "Ruby": {
      "formatter": {
        "external": {
          "command": "standardrb",
          "arguments": ["--fix", "--stdin", "ignored", "--stderr"]
        }
      }
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": false
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": false,
        "formatting": false
      }
    }
  },
  "terminal": {
    "dock": "right"
  },
  "assistant": {
    "button": false,
    "dock": "right",
    "default_open_ai_model": "gpt-3.5-turbo-0613"
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "tabs": {
    "git_status": true,
    "close_position": "left"
  },
  "features": {
    "copilot": false
  }
}
